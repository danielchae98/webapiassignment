{{> head}}
<div class="container">
    <form method="POST">

        <div class="form-group col-lg-6 col-md-6 col-sm-6">
            <input class='form-control' type='text' name="mName" id='searchData' placeholder="Please enter a movie name">
        </div>

        <div class="form-group">
            <button type='button' class='btn btn-primary' formaction="find">Find</button>
        </div>

    </form>
</div>
<br/>


<div class="container">
    <!-- <h2>Search Results</h2> -->
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>Movie ID</th>
            <th>Title</th>
            <th>Type</th>
            <th>Year</th>
            <th>Poster</th>
        </tr>
        </thead>
        <tbody>
        {{#list items}}
            <tr>
                <td>{{imdbID}}</td>
                <td>{{Title}}</td>
                <td>{{Type}}</td>
                <td>{{Year}}</td>
                <td><img src="{{Poster}}" width="200" height="250"></td>
            </tr>
        {{/list}}
        </tbody>
    </table>
</div>
