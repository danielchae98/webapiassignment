{{> head}}



    <div class="container">

      <form action="del" method="post">
        <button type="submit" class="btn btn-danger btn-lg">Clear Search History</button>
      </form> <br/> 
      <!-- <h2>Search Results</h2> -->
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Movie ID</th>
            <th>Title</th>
            <th>Type</th>
            <th>Year</th>
            <th>Poster</th>
          </tr>
        </thead>
        <tbody>
        {{#list items}}
            <tr>
                <td>{{imdbID}}</td>
                <td>{{Title}}</td>
                <td>{{Type}}</td>
                <td>{{Year}}</td>
                <td><img src="{{Poster}}" width="200" height="250"></td>
            </tr>
        {{/list}}
        </tbody>
      </table>
    </div>
